{
  "extends": "@polkadot/dev/config/tsconfig.json",
  "exclude": [
    "build/**/*",
    "**/build/**/*"
  ],
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@polkadot/apps/*": [
        "packages/apps/src/*"
      ],
      "@polkadot/apps": [
        "packages/apps/src"
      ],
      "@polkadot/pages/*": [
        "packages/pages/src/*"
      ],
      "@polkadot/pages": [
        "packages/pages/src"
      ],
      "@polkadot/apps-config": [
        "packages/apps-config/src"
      ],
      "@polkadot/apps-config/*": [
        "packages/apps-config/src/*"
      ],
      "@polkadot/react-api": [
        "packages/react-api/src"
      ],
      "@polkadot/react-api/*": [
        "packages/react-api/src/*"
      ],
      "@polkadot/react-hooks": [
        "packages/react-hooks/src"
      ],
      "@polkadot/react-hooks/*": [
        "packages/react-hooks/src/*"
      ],
      "@polkadot/react-query": [
        "packages/react-query/src"
      ],
      "@polkadot/react-query/*": [
        "packages/react-query/src/*"
      ]
    },
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@polkadot/ts",
      "./node_modules/@types"
    ]
  }
}
